<%= stylesheet_link_tag '/frontend/css/inspector-stylesheet.css' %>
<div class="site_wrapper">
   

<!-- HEADER -->
<header id="header">
  
  <%= render 'home/header' %>
    
</header><!-- end header -->

<div class="clearfix"></div>

<div class="page_title">

	<div class="container">
		<div class="title"><h1>Tin tá»©c</h1></div>
        <div class="pagenation">&nbsp;<%= link_to t(:home), root_path %> <i>/</i> <%= t(:news) %></div>
	</div>
</div><!-- end page title --> 


<!-- Contant
======================================= -->

<div class="container">

<div class="content_left">
  
	<% @news.each do |item| %>
        	
		<div class="blog_post">	
		   
			<div class="blog_postcontent">
			  
				<div class="image_frame small">
					
					<a href="#"><img src="<%= item.image_url.medium_rectangle_image %>" alt="" /></a>
				
				</div>
				
				<div class="post_info_content_small">
				
					<a href="blog-archive" class="date"><strong><%= item.created_at.strftime("%d") %></strong><i><%= item.created_at.strftime("%B") %></i></a>
				
					<h3><%= link_to item.title, { controller: 'news', action: 'detail', article_id: item.id } %></h3>
					
					<div class="clearfix"></div>
				
					<p class="text-justifly"><%= truncate(strip_tags(item.content.html_safe), length: 177, omission: ' [..]') %></p>
				
				</div>
			
			</div>
		
		</div><!-- /# end post -->
		
		<div class="clearfix divider_line3"></div>
	  
	<% end %>
    
	<%= will_paginate @news, previous_label: '&lt; Previous', next_label: 'Next >', renderer: BootstrapPagination::Rails, class: 'span_pagi' %>

</div><!-- end content left side area -->


<!-- right sidebar starts -->
<div class="right_sidebar">

	<%= render 'right_sidebar' %>
    
	<div class="clearfix mar_top5"></div>

</div>

</div><!-- end content area -->

<div class="clearfix mar_top4"></div>

<!-- Footer
======================================= -->

<%= render 'home/footer' %>
    
