                                        <div class="info">
                                            <div class="title"><%= item.title %><br /><em><%= item.location %></em>
											</div>
                                            <div class="additionnal">
                                            	<%= truncate(strip_tags(item.content.html_safe), length: 130, omission: ' [..]') %><br /><br />
                                                <b><a href="<%= url_for(controller: 'project', action: 'detail') %>">chi tiết ></a></b>
                                            </div>
                                        </div>
                                        <div class="hover"></div> 
                                </div>        
                            </div>     
                        </div>
                    </section>
                </div>
                </div>
            </li><!-- end item -->
		  <% end %>
               
          </ul>
        
    </div>
    
	<div class="clearfix mar_top2"></div>
    
</div><!-- end fresh projects -->

<div class="clearfix"></div>

<div class="mar_top4"></div>

<div class="joosa fusectio1">
	<div class="container">

	<h1><i></i>
    <strong><%= t(:news) %></strong>
	</h1>
	<% @lastest_news.limit(3).each_with_index do |item, index| %>
