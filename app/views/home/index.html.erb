		  <div class="left">
		  
			  <h4><%= item.title %></h4>
			  <p><%= truncate(strip_tags(item.content), :length => 65) %></p>
			  <a href="<%= url_for(controller: 'news', action: 'detail', article_id: item.id) %>"><i class="fa fa-plus-square"></i>&nbsp; Đọc tiếp</a>
		  
		  </div>
		  
		  <div class="right one"><img src="/frontend/layout2/images/news-home-tiet-kiem-nang-luong.jpg" alt="200x250" /></div>
  
	  </div><!-- end section -->
	<% end %>
       
</div>
