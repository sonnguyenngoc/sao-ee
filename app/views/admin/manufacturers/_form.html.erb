<% if @manufacturer.errors.any? %>
    <div id="error_explanation">
        <span class="label label-warning"></span>
        <div class="alert alert-warning alert-styled-left">
            <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
            <% @manufacturer.errors.full_messages.each do |message| %>
                - <%= message %><br/>
            <% end %>
        </div>
    </div>
<% end %>

<%= form_for [:admin, @manufacturer], html: {class: "form-horizontal"} do |f| %>
    
    <div class="form-group">
        <%= f.label "Logo: ", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <div class="uploader bg-teal-400">
                <%= f.file_field :image_url, class: "file-styled", require: true %>
                <span class="action" style="-webkit-user-select: none;"><i class="icon-googleplus5"></i></span>
            </div>
            <span class="help-block">Accepted formats: gif, png, jpg.</span>
            <%= image_tag(@manufacturer.image_url.small_image, size: "180x110", class: "img-rouded") %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-lg-2 control-label" ><%= t(:list_manufacturer_name) %> <span class='text-danger'>*</span></label>
        <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <%= f.label t(:address), class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.text_field :address, class: "form-control" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= f.label t(:list_description), class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, admin_manufacturers_path, class: "btn btn-danger"%>
    </div>
    
<% end %>